<h3 class="ui header">{{t "forms.i-i-s-kurs4-конв-файлы-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.путьФайла
      class=(if (v-get validationModel "путьФайла" "isInvalid") "error")
      label=(t "forms.i-i-s-kurs4-конв-файлы-e.путьФайла-caption")
      data-test-i-i-s-kurs4-конв-файлы-e-путьФайла=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "путьФайла" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kurs4-конв-файлы-e.выгрФайла-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.выгрФайла
      displayAttributeName="newName"
      autocomplete=true
      relationName="выгрФайла"
      projection="ВыгрФайлаL"
      title=(t "forms.i-i-s-kurs4-конв-файлы-e.выгрФайла-caption")
      readonly=readonly
      componentName="выгрФайлаLookup"
      class=(if (v-get validationModel "выгрФайла" "isInvalid") "error")
      data-test-i-i-s-kurs4-конв-файлы-e-выгрФайла=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "выгрФайла" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.выгрФайла.конвертация.имяДок
      class=(if (v-get validationModel.выгрФайла.конвертация "имяДок" "isInvalid") "error")
      label=(t "forms.i-i-s-kurs4-конв-файлы-e.выгрФайла.конвертация.имяДок-caption")
      data-test-i-i-s-kurs4-конв-файлы-e-выгрФайла-конвертация-имяДок=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.выгрФайла.конвертация "имяДок" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.выгрФайла.конвертация.загрФайла.эксФайлы.имя
      class=(if (v-get validationModel.выгрФайла.конвертация.загрФайла.эксФайлы "имя" "isInvalid") "error")
      label=(t "forms.i-i-s-kurs4-конв-файлы-e.выгрФайла.конвертация.загрФайла.эксФайлы.имя-caption")
      data-test-i-i-s-kurs4-конв-файлы-e-выгрФайла-конвертация-загрФайла-эксФайлы-имя=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.выгрФайла.конвертация.загрФайла.эксФайлы "имя" "message")}}
  </div>
</form>
