<h3 class="ui header">{{t "forms.i-i-s-kurs4-выгр-файла-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.newName
      class=(if (v-get validationModel "newName" "isInvalid") "error")
      label=(t "forms.i-i-s-kurs4-выгр-файла-e.newName-caption")
      data-test-i-i-s-kurs4-выгр-файла-e-newName=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "newName" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.репозиторий
      class=(if (v-get validationModel "репозиторий" "isInvalid") "error")
      label=(t "forms.i-i-s-kurs4-выгр-файла-e.репозиторий-caption")
      data-test-i-i-s-kurs4-выгр-файла-e-репозиторий=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "репозиторий" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kurs4-выгр-файла-e.конвертация-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.конвертация
      displayAttributeName="имяДок"
      autocomplete=true
      relationName="конвертация"
      projection="КонвертацияL"
      title=(t "forms.i-i-s-kurs4-выгр-файла-e.конвертация-caption")
      readonly=readonly
      componentName="конвертацияLookup"
      class=(if (v-get validationModel "конвертация" "isInvalid") "error")
      data-test-i-i-s-kurs4-выгр-файла-e-конвертация=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "конвертация" "message")}}
  </div>
</form>
