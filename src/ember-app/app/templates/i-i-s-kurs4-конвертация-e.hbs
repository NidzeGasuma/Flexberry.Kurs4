<h3 class="ui header">{{t "forms.i-i-s-kurs4-конвертация-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.имяДок
      class=(if (v-get validationModel "имяДок" "isInvalid") "error")
      label=(t "forms.i-i-s-kurs4-конвертация-e.имяДок-caption")
      data-test-i-i-s-kurs4-конвертация-e-имяДок=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "имяДок" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kurs4-конвертация-e.загрФайла-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.загрФайла
      displayAttributeName="путь"
      autocomplete=true
      relationName="загрФайла"
      projection="ЗагрФайлаL"
      title=(t "forms.i-i-s-kurs4-конвертация-e.загрФайла-caption")
      readonly=readonly
      componentName="загрФайлаLookup"
      class=(if (v-get validationModel "загрФайла" "isInvalid") "error")
      data-test-i-i-s-kurs4-конвертация-e-загрФайла=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "загрФайла" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kurs4-конвертация-e.настрКонв-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.настрКонв
      displayAttributeName="наименование"
      autocomplete=true
      relationName="настрКонв"
      projection="НастрКонвL"
      title=(t "forms.i-i-s-kurs4-конвертация-e.настрКонв-caption")
      readonly=readonly
      componentName="настрКонвLookup"
      class=(if (v-get validationModel "настрКонв" "isInvalid") "error")
      data-test-i-i-s-kurs4-конвертация-e-настрКонв=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "настрКонв" "message")}}
  </div>
</form>
